pipeline {
    agent any
    environment {
        PATH = "/usr/bin:/usr/local/bin"
    }
    stages {
        stage('Build') {
            steps {
                sh 'make'
            }
        }
        stage('Test'){
            steps {
                sh 'make test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'make upload'
            }
        }
    }
}
